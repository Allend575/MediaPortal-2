                  <media:VideoStreamAspectWrapper.Template>
                    <ControlTemplate>
                      <UniformGrid Rows="2" Columns="2" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}" Margin="10,20,10,20">
