<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog_menu.xaml"
    >

  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[SystemState.Title]"/>

    <!-- SystemStateDialogModel -->
    <Model x:Key="SystemStateDialogModel" Id="25F16911-ED0D-4439-9858-5E69C970C037"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Menu_Items" EnableBindings="True" Resource="{Binding Source={StaticResource SystemStateDialogModel},Path=ShutdownItems,Mode=OneTime}"/>

    <!-- Menu_Command -->
    <CommandList x:Key="Menu_Command">
      <Command Source="{Service ScreenManager}" Path="CloseTopmostDialog"/>
      <CommandBridge Command="{Binding Command}"/>
    </CommandList>

  </Include.Resources>
</Include>
