<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[WeatherSetup.SearchCity]"/>

    <!-- WeatherSetup model -->
    <Model x:Key="Model" Id="CF0434F2-B319-48ff-A700-0BB7F0C2CD2A"/>

    <!-- Contents_Element -->
    <ResourceWrapper x:Key="Contents_Element">
      <StackPanel DataContext="{Binding Source={StaticResource Model}}" Orientation="Vertical">
        <Label Margin="10,5,10,5" HorizontalAlignment="Left" Content="[Weathersetup.Entercity]" Color="White"/>
        <TextBox Margin="10,5,10,5" Style="{ThemeResource TextBoxStyle}" HorizontalAlignment="Stretch" BorderThickness="1"
            Text="{Binding Path=SearchCity,Mode=OneWayToSource}"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
          <Button Name="ButtonDone" Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Done]">
            <Button.Command>
              <CommandList>
                <Command Path="SearchLocations" Parameters="{LateBoundValue BindingValue={Binding Path=SearchCity}}"/>
                <Command Source="{Service ScreenManager}" Path="CloseTopmostDialog"/>
                <Command Source="{Service ScreenManager}" Path="ShowDialog" Parameters="dialogWeatherSearchResult"/>
              </CommandList>
            </Button.Command>
          </Button>
          <Button Name="ButtonCancel" Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Cancel]"
              Command="{Command Source={Service ScreenManager},Path=CloseTopmostDialog}"/>
        </StackPanel>
      </StackPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
