<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[weather.title]"/>

    <!-- Weather model -->
    <Model x:Key="Model" Id="92BDB53F-4159-4dc2-B212-6083C820A214"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <StackPanel Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
          DataContext="{Binding Source={StaticResource Model}}">
        <Grid x:Name="CurrentConditionPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <StackPanel x:Name="CurrentConditionOverview" Margin="0,0,50,0" Grid.Column="0" Grid.Row="0"
              HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:Name="BigIcon" Width="128" Height="128" Source="{Binding CurrentLocation.Condition.BigIconProperty}"/>
            <Label x:Name="LocName" FontSize="20"  Content="{Binding Path=CurrentLocation.Name}"/>
          </StackPanel>
          <Grid x:Name="CurrentConditionDetail" Grid.Column="1" Grid.Row="0"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="30"/>
              <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" FontSize="20" Content="[Weather.Temp]" />
            <Label Grid.Column="2" Grid.Row="0" FontSize="20" Content="{Binding CurrentLocation.Condition.Temperature}"/>

            <Label Grid.Column="0" Grid.Row="1" FontSize="20" Content="[Weather.Tempfeel]" />
            <Label Grid.Column="2" Grid.Row="1" FontSize="20" Content="{Binding CurrentLocation.Condition.FeelsLikeTemp}"/>

            <Label Grid.Column="0" Grid.Row="2" FontSize="20" Content="[Weather.UVIndex]" />
            <Label Grid.Column="2" Grid.Row="2" FontSize="20" Content="{Binding CurrentLocation.Condition.UVIndex}"/>

            <Label Grid.Column="0" Grid.Row="3" FontSize="20" Content="[Weather.Wind]" />
            <Label Grid.Column="2" Grid.Row="3" FontSize="20" Content="{Binding CurrentLocation.Condition.Wind}"/>

            <Label Grid.Column="0" Grid.Row="4" FontSize="20" Content="[Weather.Humidity]" />
            <Label Grid.Column="2" Grid.Row="4" FontSize="20" Content="{Binding CurrentLocation.Condition.Humidity}"/>

            <Label Grid.Column="0" Grid.Row="5" FontSize="20" Content="[Weather.Dewpoint]" />
            <Label Grid.Column="2" Grid.Row="5" FontSize="20" Content="{Binding CurrentLocation.Condition.DewPoint}"/>

            <Label Grid.Column="0" Grid.Row="6" FontSize="20" Content="[Weather.Sunrise]" />
            <Label Grid.Column="2" Grid.Row="6" FontSize="20" Content="{Binding CurrentLocation.LocationInfo.SunRise}"/>

            <Label Grid.Column="0" Grid.Row="7" FontSize="20" Content="[Weather.Sunset]" />
            <Label Grid.Column="2" Grid.Row="7" FontSize="20" Content="{Binding CurrentLocation.LocationInfo.SunSet}"/>
          </Grid>
        </Grid>
        <Grid x:Name="ForecastPanel" Margin="30"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label FontSize="20" x:Name="Day1" Content="{Binding CurrentLocation.ForecastCollection[0].Day}" />
            <Image Width="64" Height="64" Source="{Binding CurrentLocation.ForecastCollection[0].SmallIconProperty}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[0].High}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[0].Low}"/>
          </StackPanel>
          <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label FontSize="20" x:Name="Day2" Content="{Binding CurrentLocation.ForecastCollection[1].Day}" />
            <Image Width="64" Height="64" Source="{Binding CurrentLocation.ForecastCollection[1].SmallIconProperty}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[1].High}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[1].Low}"/>
          </StackPanel>
          <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label FontSize="20" x:Name="Day3" Content="{Binding CurrentLocation.ForecastCollection[2].Day}" />
            <Image Width="64" Height="64" Source="{Binding CurrentLocation.ForecastCollection[2].SmallIconProperty}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[2].High}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[2].Low}"/>
          </StackPanel>
          <StackPanel Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label FontSize="20" x:Name="Day4" Content="{Binding CurrentLocation.ForecastCollection[3].Day}" />
            <Image Width="64" Height="64" Source="{Binding CurrentLocation.ForecastCollection[3].SmallIconProperty}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[3].High}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[3].Low}"/>
          </StackPanel>
          <StackPanel Grid.Column="4" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label FontSize="20" x:Name="Day5" Content="{Binding CurrentLocation.ForecastCollection[4].Day}" />
            <Image Width="64" Height="64" Source="{Binding CurrentLocation.ForecastCollection[4].SmallIconProperty}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[4].High}"/>
            <Label FontSize="20" Content="{Binding CurrentLocation.ForecastCollection[4].Low}"/>
          </StackPanel>
        </Grid>
        <Label x:Name="RefreshingHintLabel" Content="[Weather.Updating]" IsVisible="{Binding IsUpdating}"
            HorizontalAlignment="Center" VerticalAlignment="Center" Wrap="true"
            Color="{ThemeResource HintTextColor}"/>
      </StackPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
