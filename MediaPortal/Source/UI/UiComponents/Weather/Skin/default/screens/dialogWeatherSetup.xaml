<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog.xaml"
    >

  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[WeatherSetup.Title]"/>

    <!-- WeatherSetup model -->
    <Model x:Key="Model" Id="CF0434F2-B319-48ff-A700-0BB7F0C2CD2A"/>
    
    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element">
      <StackPanel Margin="10,0,0,0" Width="500" VerticalAlignment="Top" HorizontalAlignment="Left"
          DataContext="{Binding Source={StaticResource Model}}">

      <Label Content="[WeatherSetup.ConfiguredCities]"/>		  
      <ListView Name="CitiesList" Margin="10" Height="300" Width="400" Style="{ThemeResource WeatherDisplayLocationsListViewStyle}"
          ItemsSource="{Binding SetupLocations}"/>
		
      <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
		  <Button  Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Add]"
              Command="{Command Source={Service ScreenManager},Path=ShowDialog,Parameters=dialogWeatherSearch}"/>
    	  <Button Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Remove]"
              Command="{Command Source={Service ScreenManager},Path=ShowDialog,Parameters=dialogWeatherRemoveCity}"/>
        </StackPanel>
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
    	  <Button Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Cancel]"
              Command="{Command Source={Service ScreenManager},Path=CloseDialog}"/>
		   <Button Margin="5" Style="{ThemeResource ButtonWideStyle}" Content="[System.Done]">
		     <Button.Command>
              <CommandList>
                <Command Path="SaveSettings"/>
                <Command Source="{Service ScreenManager}" Path="CloseDialog"/>
              </CommandList>
             </Button.Command>
          </Button>
        </StackPanel>
      </StackPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
