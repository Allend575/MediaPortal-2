<?xml version="1.0" encoding="utf-8"?>
<Grid
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
  </Grid.RowDefinitions>
  <Grid.Resources>
    <Model x:Key="PlayerModel" Id="A2F24149-B44C-498b-AE93-288213B87A1A"/>
  </Grid.Resources>
  <DockPanel Grid.Column="0" Grid.Row="0" LastChildFill="True">
    <Image DockPanel.Dock="Center" Grid.ColumnSpan="3" Grid.RowSpan="3" Stretch="Uniform"
        Source="{Binding Source={StaticResource PlayerModel},Path=PrimaryPictureSourcePath}">
      <Image.LayoutTransform>
        <RotateTransform Angle="{Binding Source={StaticResource PlayerModel},Path=PrimaryPictureRotateDegrees}" />
      </Image.LayoutTransform>
    </Image>
  </DockPanel>
  <Grid Grid.Column="0" Grid.Row="0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="50"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Control x:Name="BackgroundPiP" Grid.Column="1" Grid.Row="1" Style="{ThemeResource PipControlStyle}"/>
  </Grid>
</Grid>
