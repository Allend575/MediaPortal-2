<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    >
  <Include.Resources>

    <!-- We're using the alternative contents element so no need for a title -->

    <!-- Alternative contents -->
    <ResourceWrapper x:Key="Alternative_Contents_Element">
      <DockPanel LastChildFill="False">
        <Label FontSize="{ThemeResource HugeFontSize}" Color="{ThemeResource TextColor}" DockPanel.Dock="Center"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Content="[Home.Title]"/>
      </DockPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
