<Plugin
    DescriptorVersion="1.0"
    Name="OnlineLibraries"
    PluginId="{B32504F3-4374-4640-94A1-16E1DEE84C3C}"
    Author="Morpheus_xx, Valk"
    Copyright="GPL"
    Description="Library plugin providing online libaries access (TMDB, TheTvDB...) needed for some default metadata extractors">

  <Version
    PluginVersion="1.0"
    ReleaseDate="2013-11-11 01:00:00 GMT+01:00"
    CurrentAPI="1"/>

  <DependsOn>
    <CoreDependency Name="MediaPortal.Common" CompatibleAPI="1" />
    <CoreDependency Name="MediaPortal.Utilities" CompatibleAPI="1" />
  </DependsOn>

  <Runtime>
    <Assembly FileName="OnlineLibraries.dll"/>
  </Runtime>

  <Register Location="/Services">
    <!--Audio CD Matchers-->
    <Service Id="CDFreeDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.CDFreeDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.CDFreeDbMatcher"/>
    
    <!--Movie Matchers-->
    <Service Id="MovieFanArtTvMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MovieFanArtTvMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MovieFanArtTvMatcher"/>
    <Service Id="MovieOmDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MovieOmDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MovieOmDbMatcher"/>
    <Service Id="MovieTheMovieDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MovieTheMovieDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MovieTheMovieDbMatcher"/>
    
    <!--Series Matchers-->
    <Service Id="SeriesTvDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTvDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTvDbMatcher"/>
    <Service Id="SeriesFanArtTvMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.SeriesFanArtTvMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.SeriesFanArtTvMatcher"/>
    <Service Id="SeriesOmDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.SeriesOmDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.SeriesOmDbMatcher"/>
    <Service Id="SeriesTheMovieDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTheMovieDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTheMovieDbMatcher"/>
    <Service Id="SeriesTvMazeMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTvMazeMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.SeriesTvMazeMatcher"/>
    
    <!--Music Matchers-->
    <Service Id="MusicBrainzMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MusicBrainzMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MusicBrainzMatcher"/>
    <Service Id="MusicFanArtTvMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MusicFanArtTvMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MusicFanArtTvMatcher"/>
    <Service Id="MusicTheAudioDbMatcher" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.MusicTheAudioDbMatcher"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.MusicTheAudioDbMatcher"/>
    
   <!--Geo Location Service-->
    <Service Id="GeoLocationService" RegistrationClassName="MediaPortal.Extensions.OnlineLibraries.Libraries.IGeoLocationService"
        ServiceClassName="MediaPortal.Extensions.OnlineLibraries.GeoLocationService"/>
  </Register>

</Plugin>
