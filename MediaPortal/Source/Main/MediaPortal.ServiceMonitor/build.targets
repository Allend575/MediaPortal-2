<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

  <PropertyGroup>
    <AppDestination>$(SolutionDir)..\Bin\$(SolutionName)\bin\$(PlatformName)\$(ConfigurationName)\</AppDestination>
  </PropertyGroup>

  <ItemGroup>
    <BaseFiles Include="$(SolutionDir)Base\ServiceMonitor\**\*.*" />
  </ItemGroup>

  <Target Name="AfterBuild">
    <Copy SourceFiles="@(BaseFiles)"
          DestinationFiles="@(BaseFiles->'$(AppDestination)%(RecursiveDir)%(Filename)%(Extension)')" />

    <Delete Files="$(AppDestination)CommandLine.xml" />
    <Delete Files="$(AppDestination)Hardcodet.Wpf.TaskbarNotification.pdb" />
    <Delete Files="$(AppDestination)Hardcodet.Wpf.TaskbarNotification.xml" />
    <Delete Files="$(AppDestination)Microsoft.WindowsAPICodePack.pdb" />
    <Delete Files="$(AppDestination)Microsoft.WindowsAPICodePack.Shell.pdb" />
  </Target>

</Project>