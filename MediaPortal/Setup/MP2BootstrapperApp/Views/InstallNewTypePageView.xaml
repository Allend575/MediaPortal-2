<UserControl x:Class="MP2BootstrapperApp.Views.InstallNewTypePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP2BootstrapperApp.Views">
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Button Grid.Column="0" Grid.Row="0" x:Name="FullInstallBtn" Command="{Binding ClientServerInstallCommand}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10"  VerticalAlignment="Top" Width="195" Height="149">
    <StackPanel >
      <Image Source="..\resources\full_install.png" Stretch="Fill" Width="75" Height="75"/>
      <Label FontSize="22" Foreground="#FFD4D4D4" Margin="0,30,0,0">Client and Server</Label>
    </StackPanel>
  </Button>
    <Button Grid.Column="1" Grid.Row="0" x:Name="ClientInstallBtn" Command="{Binding ClientInstallCommand}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" Width="195" Height="149">
    <StackPanel>
      <Image Source="..\resources\client_install.png" Stretch="Fill" Width="75" Height="75"/>
      <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Client</Label>
    </StackPanel>
  </Button>
    <Button Grid.Column="2" Grid.Row="0" x:Name="ServerInstallBtn" Command="{Binding ServerInstallCommand}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10"  VerticalAlignment="Top" Width="195" Height="149">
    <StackPanel>
      <Image Source="..\resources\server_install.png" Stretch="Fill" Width="65" Height="65"/>
      <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Server</Label>
    </StackPanel>
  </Button>
    <Button Grid.Column="3" Grid.Row="0" x:Name="CustomInstallBtn" Command="{Binding CustomInstallCommand}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" Width="208" Height="149">
    <StackPanel>
      <Image Source="..\resources\custom_install.png" Stretch="Fill" Width="65" Height="65"/>
      <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Custom Installation</Label>
    </StackPanel>
  </Button>
</Grid>
  
</UserControl>
