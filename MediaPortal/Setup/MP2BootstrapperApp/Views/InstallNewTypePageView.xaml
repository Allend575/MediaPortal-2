<UserControl x:Class="MP2BootstrapperApp.Views.InstallNewTypePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP2BootstrapperApp.Views"
             xmlns:conv="clr-namespace:MP2BootstrapperApp">
  
  <Grid>
    <Grid.Resources>
      <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Grid.Resources>
      <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <RadioButton Grid.Column="0" Grid.Row="0" IsChecked="{Binding Path=InstallType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static conv:InstallType.ClientServer}}"
                 HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10"  VerticalAlignment="Top" Width="195" Height="149">
      <StackPanel>
        <Image Source="..\resources\full_install.png" Stretch="Fill" Width="75" Height="75"/>
        <Label FontSize="22" Foreground="#FFD4D4D4" Margin="0,30,0,0">Client and Server</Label>
      </StackPanel>
    </RadioButton>
    <RadioButton Grid.Column="1" Grid.Row="0" IsChecked="{Binding Path=InstallType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static conv:InstallType.Client}}"
                 HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" Width="195" Height="149">
      <StackPanel>
        <Image Source="..\resources\client_install.png" Stretch="Fill" Width="75" Height="75"/>
        <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Client</Label>
      </StackPanel>
    </RadioButton>
    <RadioButton Grid.Column="2" Grid.Row="0" IsChecked="{Binding Path=InstallType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static conv:InstallType.Server}}"
                 HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10"  VerticalAlignment="Top" Width="195" Height="149">
      <StackPanel>
        <Image Source="..\resources\server_install.png" Stretch="Fill" Width="65" Height="65"/>
        <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Server</Label>
      </StackPanel>
    </RadioButton>
    <RadioButton Grid.Column="3" Grid.Row="0" IsChecked="{Binding Path=InstallType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static conv:InstallType.Custom}}"
                 HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" Width="208" Height="149">
      <StackPanel>
        <Image Source="..\resources\custom_install.png" Stretch="Fill" Width="65" Height="65"/>
        <Label FontSize="22" Foreground="#FFD4D4D4" HorizontalContentAlignment="Center" Margin="0,30,0,0">Custom Installation</Label>
      </StackPanel>
    </RadioButton>
  </Grid>
</UserControl>

