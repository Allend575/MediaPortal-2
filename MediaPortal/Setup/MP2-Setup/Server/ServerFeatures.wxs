             Description="!(loc.F_MP_Server_Desc)">

      <ComponentRef Id="S__Defaults" />
      <ComponentRef Id="ComponentModifyDefaultServerPluginsPath" />

      <ComponentRef Id="ClientManager_create_1_0" />
