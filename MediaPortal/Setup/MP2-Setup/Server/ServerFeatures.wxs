      <Feature Id="MP2Server_Plugins"
               Level="2"
               Absent="disallow"
               AllowAdvertise="no"
               ConfigurableDirectory="INSTALLDIR_SERVER_PLUGINS"
               Title="!(loc.F_MP_Server_Plugin)"
