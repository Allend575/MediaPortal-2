<Window x:Class="MP2_PluginWizard.View.PluginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:MP2_PluginWizard.Converter"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Images/MP2_PluginWizard.ico"
        Title="MP2 Plugin Wizard" Height="500" Width="600">
  <Window.Background>
    <ImageBrush ImageSource="../Resources/Images/background.png" />
  </Window.Background>

  <Window.Resources>
    <Style TargetType="{x:Type Label}">
      <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
      <Setter Property="Control.FontSize" Value="16"/>
    </Style>
  </Window.Resources>

  <Grid>
	
	</Grid>
</Window>
