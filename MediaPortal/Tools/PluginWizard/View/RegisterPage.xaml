<View:WizardPage x:Class="MP2_PluginWizard.View.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:View="clr-namespace:MP2_PluginWizard.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">
	
    <DockPanel >
        <Border DockPanel.Dock="Top" Margin="10">
            <StackPanel>
                <Label Style="{StaticResource HeaderLabelStyle}" Content="Register Items" />
                <Label Style="{StaticResource SubHeaderLabelStyle}" Content="-> hit Next when you are done" />
            </StackPanel>
        </Border>
	
	    <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
        				<RowDefinition Height="*" />
        				<RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Register"/>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding NewRegisterLocation}"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="3,0,0,0" Command="{Binding AddRegisterLocationCommand}" 
                        BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Rectangle Width="21" Height="21">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="..\Resources\Images\Plus.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
                
                <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Registers}" HorizontalContentAlignment="Stretch"
                          SelectedIndex="{Binding RegisterSelectedIndex}"
                          Background="Transparent" Foreground="White" Margin="0,0,0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}" Text="{Binding }"/>
                                <Button Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Command="{Binding RemoveRegisterLocationCommand}" DataContext="{Binding DataContext, RelativeSource ={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext}">
                                    <Rectangle Width="14" Height="14" Name="myRectangle">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="..\Resources\Images\Minus.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Items"/>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Name: "/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Text="{Binding Path=NewRegisterItemName}" />

                <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelStyle}" Content="ID: "/>
                <TextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource TextBoxStyle}" Text="{Binding Path=NewRegisterItemId}" />

                <Label Grid.Row="0" Grid.Column="4" Style="{StaticResource LabelStyle}" Content="Redundant: "/>
                <CheckBox Grid.Row="0" Grid.Column="5" VerticalAlignment="Center" IsChecked="{Binding Path=NewRegisterItemRedundant}" />
                
                <Button Grid.Row="0" Grid.Column="6" Margin="3,0,0,0" Command="{Binding AddRegisterItemCommand}" 
                        BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Rectangle Width="21" Height="21">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="..\Resources\Images\Plus.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
                
                <ListView Name="ItemsListView" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" ItemsSource="{Binding Path=RegisterItems}" HorizontalContentAlignment="Stretch"
                          SelectedIndex="{Binding RegisterItemSelectedIndex}"
                          Background="Transparent" Foreground="White" Margin="0,0,0,20">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}" Text="{Binding}"/>
                                <Button Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Command="{Binding RemoveRegisterItemCommand}" DataContext="{Binding DataContext, RelativeSource ={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext}">
                                    <Rectangle Width="14" Height="14" Name="myRectangle">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="..\Resources\Images\Minus.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>


            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Attributes"/>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" Content="Name: "/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Text="{Binding Path=NewRegisterAttributeName}" />

                <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelStyle}" Content="Value: "/>
                <TextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource TextBoxStyle}" Text="{Binding Path=NewRegisterAttributeValue}" />

                <Button Grid.Row="0" Grid.Column="4" Margin="3,0,0,0" Command="{Binding AddRegisterAttributeCommand}" 
                        BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Rectangle Width="21" Height="21">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="..\Resources\Images\Plus.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button>
                
                <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" ItemsSource="{Binding Path=RegisterAttributes}" HorizontalContentAlignment="Stretch"
                          Background="Transparent" Foreground="White">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource TextBlockStyle}" Text="{Binding }"/>
                                <Button Grid.Column="1" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                        Command="{Binding RemoveRegisterAttributeCommand}" DataContext="{Binding DataContext, RelativeSource ={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=DataContext}">
                                    <Rectangle Width="14" Height="14" Name="myRectangle">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="..\Resources\Images\Minus.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
    	
    	</Grid>
		
    </DockPanel>

</View:WizardPage>
