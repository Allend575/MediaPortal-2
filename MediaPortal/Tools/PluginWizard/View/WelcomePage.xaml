<View:WizardPage x:Class="MP2_PluginWizard.View.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:View="clr-namespace:MP2_PluginWizard.View"
                 mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">

        <DockPanel LastChildFill="False">
        <Border DockPanel.Dock="Top" Margin="10">
            <StackPanel>
                <Label Style="{StaticResource HeaderLabelStyle}" Content="Welcome to the MP2 Plugin Wizard" />
                <Label Style="{StaticResource SubHeaderLabelStyle}" Content="This wizard will guide You (...)" />
            </StackPanel>
        </Border>

        <Label DockPanel.Dock="Top" Style="{StaticResource LabelStyle}" Margin="10,10,10,0" Content="Check of basic information:"/>
        <DockPanel DockPanel.Dock="Top" Margin="30,0,30,10" >
            <Button DockPanel.Dock="Right" Width="70" Content="Update" Click="OnMp2UpdateClick"/>
            <Label Content="-> MediaPortal2 plugin information's available"
                   Foreground="{Binding Mp2PluginsAvailable, Converter={StaticResource BoolForeground}}"
                   Background="{Binding Mp2PluginsAvailable, Converter={StaticResource BoolBackground}}"/>         
        </DockPanel>

        <Label DockPanel.Dock="Top" Margin="10,30,10,0" Style="{StaticResource LabelStyle}" Content="Select your plugin.xml directory"/>

        <DockPanel DockPanel.Dock="Top" Margin="30,0,30,10" >
            <Button DockPanel.Dock="Right" Margin="3,0,0,0" BorderThickness="0" Click="PluginDirButtonClick">
                <Rectangle Width="21" Height="21">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="..\Resources\Images\Folder-open.png"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
            <ComboBox ItemsSource="{Binding PluginPaths}" SelectedItem="{Binding PluginPathName}" SelectionChanged="PluginPathSelectionChanged"
                      />
        </DockPanel>


    </DockPanel>

</View:WizardPage>
