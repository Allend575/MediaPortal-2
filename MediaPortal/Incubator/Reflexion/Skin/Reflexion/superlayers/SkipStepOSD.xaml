<?xml version="1.0" encoding="utf-8"?>
<Screen
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls"
    >
  <DockPanel x:Name="SkipStepOSDPanel" Context="{Model Id=8573DBD8-A257-426a-9875-9DB155D32D47}" LastChildFill="false">
    <!-- DataContext model = ExtendedVideoSkip -->

    <Border DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,0,0,80"  x:Name="OSD_Background" 
        BorderBrush="{ThemeResource OSDPlayControlBorderColor}"
        CornerRadius="{ThemeResource OSDPlayControlCornerRadius}" 
        BorderThickness="{ThemeResource OSDPlayControlBorderThickness}">
      <Border.Background>
          <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="#5F9BBCDF" Offset="0" />
          <GradientStop Color="#708CB7DA" Offset="0.18" />
          <GradientStop Color="#3560AACD" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
      <Grid Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="SkipStepLabel" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"
            Content="{Binding SkipStep}" Color="{ThemeResource TextColor}"/>

      </Grid>
    </Border>
  </DockPanel>
</Screen>
