<?xml version="1.0" encoding="utf-8" ?>
<Plugin
    DescriptorVersion="1.0"
    Name="Diagnostics"
    PluginId="{650FA589-5C23-4B66-9B7B-CF6C4CEDE997}"
    Author="Morpheus_xx"
    Copyright="GPL"
    Description="Provides additional features for problem diagnostics.">

  <Version
    PluginVersion="1.0"
    ReleaseDate="2016-04-11 01:00:00 GMT+01:00"
    CurrentAPI="1"/>

  <Runtime>
    <Assembly FileName="Diagnostics.dll"/>
  </Runtime>

  <DependsOn>
    <PluginReference PluginId="{1AFF4467-64B0-4ca1-AF28-9AEDF3525BCE}" CompatibleAPI="1"/>
    <!-- ConfigurationManager -->
    <PluginReference PluginId="{B765A4B6-F455-4941-BDAE-2CE45208BFEB}" CompatibleAPI="1"/>
    <!-- Configuration plugin -->
  </DependsOn>

  <Register Location="/Services">
    <Service Id="DiagnosticsHandler" RegistrationClassName="MediaPortal.UiComponents.Diagnostics.Service.DiagnosticsHandler" ServiceClassName="MediaPortal.UiComponents.Diagnostics.Service.DiagnosticsHandler"/>
  </Register>

  <!-- Root Sections -->
  <Register Location="/Configuration/Settings/General">
    <ConfigGroup
        Id="System"
        Redundant="true"
        Text="[Settings.General.System]"/>
  </Register>

  <!-- Contents of '/System' section -->
  <Register Location="/Configuration/Settings/General/System">
    <ConfigSection
        Id="Diagnostics"
        Text="Diagnostics"/>
  </Register>

  <Register Location="/Configuration/Settings/General/System/Diagnostics">
    <ConfigSetting
        Id="LogLevel"
        Text="Enable DEBUG logging on Client"
        HelpText="Switch to DEBUG to provide verbosity"
        ClassName="MediaPortal.UiComponents.Diagnostics.Settings.Configuration.DiagnosticsSettingsLogLevelConfiguration"/>
    <ConfigSetting
        Id="FocusSteeling"
        Text="Enable logging of potential focus steeling"
        HelpText="Enable logging of potential focus steeling"
        ClassName="MediaPortal.UiComponents.Diagnostics.Settings.Configuration.DiagnosticsSettingsFocusSteelling"/>
    <ConfigSetting
        Id="LogCollector"
        Text="Collect log files"
        HelpText="Provide log collection now"
        ClassName="MediaPortal.UiComponents.Diagnostics.Settings.Configuration.DiagnosticsSettingsCollectLog"/>
  </Register>


</Plugin>
