<Screen
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="30">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <DockPanel LastChildFill="false">
      <TextBox DockPanel.Dock="Top" Style="{ThemeResource TextBoxStyle}"/>
      <TextBox DockPanel.Dock="Bottom" Style="{ThemeResource TextBoxStyle}"/>
      <StackPanel DockPanel.Dock="Left" Width="300" VerticalAlignment="Center">
        <TextBox Margin="0,20,0,20" DockPanel.Dock="Left" Style="{ThemeResource TextBoxStyle}"/>
        <TextBox Margin="0,20,0,20" DockPanel.Dock="Left" Style="{ThemeResource TextBoxStyle}"/>
        <TextBox Margin="0,20,0,20" DockPanel.Dock="Left" Style="{ThemeResource TextBoxStyle}"/>
      </StackPanel>
      <TextBox DockPanel.Dock="Right" Style="{ThemeResource TextBoxStyle}"
          Width="300" VerticalAlignment="Center"/>
      <TextBox DockPanel.Dock="Center" Style="{ThemeResource TextBoxStyle}"
          PreferredTextLength="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </DockPanel>
    <VirtualKeyboardControl Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
        Style="{ThemeResource VirtualKeyboardControlStyle}"/>
  </Grid>
</Screen>