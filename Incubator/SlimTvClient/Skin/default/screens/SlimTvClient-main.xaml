<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[SlimTvClient.Title]"/> 

    <!-- SlimTvClient model -->
    <Model x:Key="SlimTvClient" Id="8BEC1372-1C76-484c-8A69-C7F3103708EC"/>

    <!-- Contents -->
    <!--<ResourceWrapper x:Key="Client_Element">-->
    <ResourceWrapper x:Key="Contents_Element">
        <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
              DataContext="{Binding Source={StaticResource SlimTvClient}}">
          
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          
          <StackPanel x:Name="Groups" Margin="20,0,20,0" Grid.Column="0" Grid.Row="0"
              HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="PrevGroupButton" Style="{StaticResource ButtonStyle}" Content=" &lt; "
              Command="{Command PrevGroup}"/>
            <Button x:Name="NextGroupButton" Style="{StaticResource ButtonStyle}" Content=" &gt; "
              Command="{Command NextGroup}"/>
            <Label x:Name="CurrentGroupNameLabel" FontSize="{ThemeResource SmallFontSize}" Content="{Binding CurrentGroupName}"/>
          </StackPanel>          
          
          <ListView  Grid.Column="0" Grid.Row="1"
              Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Style="{ThemeResource MediaItemsListViewStyle}"
              ItemsSource="{Binding Path=CurrentGroupChannels}"
              SelectionChanged="{CommandStencil UpdateProgram}">
              <ListView.Resources>
                <ResourceWrapper x:Key="Menu_Command" Resource="{Binding Path=Command}"/>
             </ListView.Resources>
          </ListView>

          <StackPanel x:Name="Programs" Margin="20,0,20,0" Grid.Column="1" Grid.Row="0"
              HorizontalAlignment="Left" VerticalAlignment="Top">
            
            <Label x:Name="SelectedCurrentProgramLabel" FontSize="{ThemeResource SmallFontSize}" Content="{Binding SelectedCurrentProgram}"/>
            <Label x:Name="SelectedNextProgramLabel" FontSize="{ThemeResource SmallFontSize}" Content="{Binding SelectedNextProgram}"/>
            
          </StackPanel>

        </Grid>
    </ResourceWrapper>
  </Include.Resources>
</Include>
